{% extends 'sublayout_backend.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <h3 class="box-title m-b-0"><center>Input Data Pembayaran</center></h3>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="barang">Paket</label>
                                <select name="barang" id="barang" class="form-control">
                                    <option value="null">-- Pilih Paket --</option>
                                    {% for item in barang %}
                                        <option value="{{ item.id }}">{{ item.namaBarang }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="file" name="berkas" id="" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}