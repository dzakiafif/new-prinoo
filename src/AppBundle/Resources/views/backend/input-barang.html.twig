{% extends 'sublayout_backend.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <h3 class="box-title m-b-0"><center>Input Data Barang</center></h3>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <form method="post">
                            <div class="form-group">
                                <label>Nama Barang</label>
                                <input type="text" name="nama_barang" id="" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Harga Barang</label>
                                <input type="text" name="harga_barang" id="" class="form-control">
                            </div>
                            <div class="form-group">
                                <select name="jenis_barang" id="" class="form-control">
                                    <option value="">-- Pilih Jenis Barang --</option>
                                    <option value="1">Paket</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}