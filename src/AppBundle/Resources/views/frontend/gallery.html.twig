{% extends 'sublayout_frontend.html.twig' %}

{% block content %}
    <section class="">
        <div class="container">
            <div class="section-content">
                <div class="row multi-row-clearfix">
                    <div class="col-md-12">
    <div class="products">
    {% for paginate in paginator %}
        <div class="col-sm-6 col-md-4 col-lg-4 mb-30">
            <div class="product">
                <span class="tag-sale">Sale!</span>
                <div class="product-thumb">
                    {% if paginate.profileBarang is not null %}
                        <img src="{{ asset('uploads') }}/images/barang/{{ paginate.profileBarang }}" alt="" class="img-responsive img-fullwidth">
                    {% else %}
                        <img alt="" src="http://placehold.it/285x300" class="img-responsive img-fullwidth">
                    {% endif %}    
                    <div class="overlay">
                        <div class="btn-add-to-cart-wrapper">
                            <a class="btn btn-theme-colored btn-sm btn-flat pl-20 pr-20 btn-add-to-cart text-uppercase font-weight-700" href="#">Add To Cart</a>
                        </div>
                        <div class="btn-product-view-details">
                            <a class="btn btn-default btn-theme-colored btn-sm btn-flat pl-20 pr-20 btn-add-to-cart text-uppercase font-weight-700" href="{{ path('app_barang_detail',{id: paginate.id}) }}">View detail</a>
                        </div>
                    </div>
                </div>
                <div class="product-details text-center">
                    <a href="#"><h5 class="product-title">{{ paginate.namaBarang }}</h5></a>
                    {#<div class="star-rating" title="Rated 3.50 out of 5"><span style="width: 67%;">3.50</span></div>#}
                    <div class="price"><span class="amount">{{ paginate.hargaBarang }}</span></div>
                </div>
            </div>
        </div>
        {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <nav>
                            <ul class="pagination theme-colored">
                                <li {{ thisPage == 1 }}> <a href="{{ path('app_gallery_page',{page: thisPage-1 < 1 ? 1 : thisPage-1}) }}" aria-label="Previous"> <span aria-hidden="true">&laquo;</span> </a> </li>
                                {% for i in 1..maxPages %}
                                    <li {{ thisPage == 1 ? 'class="active"' }}>
                                        <a href="{{ path('app_gallery_page',{page: i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                                <li {{ thisPage == maxPages }}> <a href="{{ path('app_gallery_page',{page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}" aria-label="Next"> <span aria-hidden="true">&raquo;</span> </a> </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}